<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:
  <select name="airline" class="options">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select> </label> <br>
  <label>Airport:
  <select name="airport" class="options">
    <option value="AUS" selected>AUS</option>
    <option value="DFW">DFW</option>
    <option value="DEN">DEN</option>
    <option value="LAX">LAX</option>
    <option value="SAN">SAN</option>
  </select></label> <br>
  <label>Flight Number (10-999):
  <input type="number" name="flightNum" placeholder="10-9999" required> </label> <br>
  <label>Departs Time:
  <input type="datetime-local" name="departs" formtarget="yyyy-MM-ddThh:mm"></label> <br>
  <button type="submit">Submit</button>
</form>

